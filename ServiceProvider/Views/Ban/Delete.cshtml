@{
	ViewData["Title"] = "Revoke Ban";
}

@model BannedUser?

@if (Model != null)
{
	<h2 class="alert alert-info text-center">Revoke Ban</h2>

	<dt>@Html.DisplayNameFor(x => x.UserId)</dt>
	<dd>@Html.DisplayFor(x => x.UserId)</dd>

	<dt>@Html.DisplayNameFor(x => x.User.Name)</dt>
	<dd>@Html.DisplayFor(x => x.User.Name)</dd>

	<dt>@Html.DisplayNameFor(x => x.User.Email)</dt>
	<dd>@Html.DisplayFor(x => x.User.Email)</dd>

	<dt>@Html.DisplayNameFor(x => x.BanReason)</dt>
	<dd>@Html.DisplayFor(x => x.BanReason)</dd>

	<dt>@Html.DisplayNameFor(x => x.BanTime)</dt>
	<dd>@Html.DisplayFor(x => x.BanTime)</dd>

	<form method="post" asp-controller="Ban" asp-action="PostDelete" asp-route-id="@Model.Id">
		<div class="d-flex pt-1">
			<button type="submit" class="btn btn-danger">Delete</button>
			<a class="btn btn-danger ms-2" asp-controller="Ban" asp-action="Index">Back</a>
		</div>
	</form>
}
else
{
	<h3 class="alert alert-danger text-center">Ban could not be found.</h3>
}