@{
    ViewData["Title"] = "Service Request - Submit";
}

@model ServiceRequest

<h2 class="alert alert-info text-center">Service Request - Submit</h2>

<form method="post" class="col-4" asp-controller="Request" asp-action="PostAdd">

	<div class="form-group">
		<label asp-for="Service.Name"></label>
		<select asp-for="ServiceId" asp-items="@ViewBag.Services" class="form-control" aria-describedby="serviceHelp">
			<option selected disabled>Select...</option>
		</select>

		<div class="row">
			<small id="serviceHelp" class="form-text text-muted">Select service that you'd like to get.</small>
			<span asp-validation-for="ServiceId" class="form-text text-danger"></span>
		</div>
	</div>

	<div class="form-group pt-2">
		<label asp-for="About"></label>
		<textarea type="email" asp-for="About" class="form-control" rows="5" aria-describedby="aboutHelp" placeholder="Write about your request"></textarea>

		<div class="row">
			<small id="aboutHelp" class="form-text text-muted">[Optional] If you have any special requests and concerns, feel free to write it down.</small>
			<span asp-validation-for="About" class="form-text text-danger"></span>
		</div>
	</div>

	<div asp-validation-summary="ModelOnly" class="form-group text-danger pt-3"></div>

	<div class="mt-2">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>

</form>