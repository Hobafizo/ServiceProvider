@model IUser

@{
	ViewData["Title"] = string.Format("{0} Panel", !Model.IsAdmin ? "User" : "Admin");
}

@if (Model != null)
{
	@if (Model.IsAdmin)
	{
		<ul class="list-group col-3">
			<li class="list-group-item list-group-item-action active">
				Actions
			</li>

			<a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-controller="User" asp-action="Admin">
				Users
				<span class="badge bg-primary rounded-pill user-select-none">@ViewBag.UserCount</span>
			</a>

			<a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-controller="Service">
				Services
				<span class="badge bg-primary rounded-pill user-select-none">@ViewBag.ServiceCount</span>
			</a>

			<a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-controller="Request">
				Requests
				<span class="badge bg-primary rounded-pill user-select-none">@ViewBag.RequestCount</span>
			</a>

			<a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-controller="Ban">
				Bans
				<span class="badge bg-primary rounded-pill user-select-none">@ViewBag.BannedUserCount</span>
			</a>
		</ul>
	}
	else
	{
		<ul class="list-group col-3">
			<li class="list-group-item list-group-item-action active">
				Actions
			</li>

			<a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-controller="Request" asp-action="Add">
				Request Service
			</a>
		</ul>
	}
}
else
{
	<h2 class="alert alert-danger text-center">Unauthorized access to user panel.</h2>
}